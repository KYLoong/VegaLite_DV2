{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 700,
  "projection": {"type": "mercator"},
  "data": {
    "url": "https://raw.githubusercontent.com/KYLoong/VEGALITE_DV2/main/malaysia_topojson.json",
    "format": {
      "type": "topojson",
      "feature": "ne_10m_admin_1_states_provinces"
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/KYLoong/VEGALITE_DV2/main/data/population_by_state_2025_normalised.csv"
        },
        "key": "state",
        "fields": ["population_density"]
      }
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "field": "population_density",
      "type": "quantitative",
      "title": "Population Density",
      "scale": {"type": "log","scheme": "blues"}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "population_density", "type": "quantitative", "title": "Population Density (people/kmÂ²)", "format": ".2f"}
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "background": "#f9f9f9"
  }
}